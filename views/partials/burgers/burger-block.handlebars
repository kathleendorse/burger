{{#unless devoured}}
	<li class="list-group-item d-flex justify-content-between align-items-center">
		{{id}}. {{burger_name}}
		<button class="btn btn-outline-dark btn-sm  change-devoured" data-id="{{id}}" data-newdevoured="{{devoured}}">
		Devour It!
		</button>
</li>
{{/unless}}


{{#if devoured}}
	<li class="list-group-item list-group-item-dark align-items-center" style="border-color:black">
		{{id}}. {{burger_name}}
	</li>
{{/if}}